{
  "name": "c-m-node",
  "version": "1.0.0",
  "description": "Node.js project with TypeScript",
  "main": "dist/main.js",
  "scripts": {
    "dev": "pnpm init-env && dotenvx run -- tsx watch src/main.ts",
    "build": "tsup src/main.ts",
    "start": "dotenvx run -- node dist/main.js",
    "build-start": "pnpm run build && pnpm run start",
    "type-check": "tsc --noEmit",
    "init-env": "if [ ! -f ./.env ]; then cp ./.env.example ./.env; fi",
    "lint": "eslint .",
    "lint-fix": "pnpm run lint --fix"
  },
  "keywords": [],
  "author": "Tomasz Ferens",
  "license": "ISC",
  "dependencies": {
    "@dotenvx/dotenvx": "^1.14.1",
    "express": "^4.21.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.1",
    "@eslint/js": "^9.11.0",
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.5",
    "eslint": "^9.11.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.9.0",
    "prettier": "^3.3.3",
    "tsup": "^8.3.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.6.0"
  }
}
